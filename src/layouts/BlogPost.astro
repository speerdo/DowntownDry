---
import Layout from './Layout.astro';
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, author, publishDate, readTime, image, category, tags } = post.data;

// Format the date for display (UTC so calendar date matches frontmatter)
const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  timeZone: 'UTC',
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// ISO date for structured data
const isoDate = new Date(publishDate).toISOString();

// Article metadata for Open Graph
const articleMeta = {
  publishedTime: isoDate,
  author: author,
  section: category.replace('-', ' '),
  tags: tags || []
};

// Category display names for schema
const categoryNames: Record<string, string> = {
  'recipes': 'Recipes',
  'wellness': 'Wellness',
  'city-guide': 'City Guides',
  'community': 'Community',
  'lifestyle': 'Lifestyle',
  'delta-thc': 'Delta THC',
  'tips': 'Tips',
  'advice': 'Advice'
};

// Define category styling
let categoryClass = 'text-accent-500';
let categoryText = category.replace('-', ' ').toUpperCase();

switch(category) {
  case 'recipes':
    categoryClass = 'text-secondary-500';
    break;
  case 'wellness':
    categoryClass = 'text-accent-500';
    break;
  case 'city-guide':
    categoryClass = 'text-orange-500';
    break;
  case 'community':
    categoryClass = 'text-blue-600';
    break;
  case 'lifestyle':
    categoryClass = 'text-indigo-600';
    break;
  case 'delta-thc':
    categoryClass = 'text-green-600';
    break;
  case 'tips':
    categoryClass = 'text-accent-500';
    break;
  case 'advice':
    categoryClass = 'text-pink-600';
    break;
}

// Build the canonical URL
const canonicalURL = new URL(`/blog/${post.slug}/`, 'https://www.downtowndry.bar').href;
---

<Layout title={`${title} | Downtown Dry`} description={description} ogImage={image} canonical={canonicalURL} article={articleMeta}>
  <!-- BlogPosting Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": title,
    "description": description,
    "image": image,
    "datePublished": isoDate,
    "dateModified": isoDate,
    "author": {
      "@type": "Organization",
      "name": author,
      "url": "https://www.downtowndry.bar"
    },
    "publisher": {
      "@type": "Organization",
      "name": "Downtown Dry",
      "url": "https://www.downtowndry.bar",
      "logo": {
        "@type": "ImageObject",
        "url": "https://www.downtowndry.bar/downtown_dry_og.png"
      }
    },
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": canonicalURL
    },
    "articleSection": categoryNames[category] || category,
    "keywords": tags ? tags.join(', ') : category
  })} />
  </script>

  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://www.downtowndry.bar/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Blog",
        "item": "https://www.downtowndry.bar/blog/"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": title,
        "item": canonicalURL
      }
    ]
  })} />
  </script>

  <!-- Hero Section -->
  <div class="relative w-full h-96">
    <Image 
      src={image} 
      alt={title}
      width={1200}
      height={630}
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/75 via-black/50 to-transparent"></div>
    <div class="absolute inset-0 flex items-end">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pb-20">
        <div class={`text-sm ${categoryClass} font-semibold mb-4 uppercase tracking-wide`}>
          {categoryText}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-tight tracking-tight">
          {title}
        </h1>
        <div class="flex items-center text-sm text-white/80">
          <span class="font-medium">By {author}</span>
          <span class="mx-3">•</span>
          <span>{formattedDate}</span>
          <span class="mx-3">•</span>
          <span>{readTime}</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Article Content -->
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="prose prose-lg max-w-none blog-content">
      <slot />
    </div>
  </article>

  <!-- Share and Navigation -->
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <div class="border-t border-neutral-200 pt-8 flex justify-between items-center">
      <div class="text-sm text-neutral-500">
        Share this article:
        <div class="flex gap-4 mt-2">
          <a href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="text-neutral-400 hover:text-primary-600">
            <span class="sr-only">Share on Twitter</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
            </svg>
          </a>
          <a href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`} target="_blank" rel="noopener noreferrer" class="text-neutral-400 hover:text-primary-600">
            <span class="sr-only">Share on Facebook</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd"/>
            </svg>
          </a>
          <a href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(title)}`} target="_blank" rel="noopener noreferrer" class="text-neutral-400 hover:text-primary-600">
            <span class="sr-only">Share on LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 0 1-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 0 1-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 0 1 1.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd"/>
            </svg>
          </a>
        </div>
      </div>
      <a href="/blog/" class="inline-flex items-center text-primary-600 font-semibold hover:text-primary-700">
        <svg class="mr-2 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L4.414 9H17a1 1 0 110 2H4.414l5.293 5.293a1 1 0 010 1.414z" clip-rule="evenodd"/>
        </svg>
        Back to Blog
      </a>
    </div>
  </div>
</Layout>
