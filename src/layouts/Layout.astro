---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';

/**
 * Layout Component Usage:
 * 
 * This layout automatically includes the Header and Footer components.
 * DO NOT import or use <Header /> or <Footer /> in your pages when using this layout.
 * 
 * Example usage in a new page:
 * 
 * ---
 * import Layout from '../layouts/Layout.astro';
 * ---
 * 
 * <Layout title="Your Page Title" description="Your page description">
 *   <!-- Your page content goes here -->
 *   <main>
 *     <h1>Welcome to your page!</h1>
 *   </main>
 * </Layout>
 */

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  ogImage?: string;
  // Article-specific props for blog posts
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    section?: string;
    tags?: string[];
  };
}

const { title, description = "Discover alcohol-free nightlife, kava bars, CBD lounges, and alternative social venues across US cities. Your guide to downtown dry entertainment and mindful socializing.", canonical, ogImage, article } = Astro.props;
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site);

// Normalize OG image URL - handle both absolute and relative URLs
const defaultOgImage = "https://downtowndry.bar/downtown_dry_og.png";
let ogImageURL = defaultOgImage;
if (ogImage) {
  // If it's already an absolute URL (starts with http:// or https://), use it as-is
  if (ogImage.startsWith('http://') || ogImage.startsWith('https://')) {
    ogImageURL = ogImage;
  } else {
    // If it's a relative URL, make it absolute using the site URL
    ogImageURL = new URL(ogImage, Astro.site).href;
  }
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="keywords" content="alcohol-free venues, non-alcoholic bars, mocktail lounges, kava bars, THC venues, NA beer, sober nightlife, mindful drinking, recovery-friendly, alcohol-free restaurants" />
    <meta name="author" content="Downtown Dry" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={article ? "article" : "website"} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Downtown Dry" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={ogImage ? `${title} - Downtown Dry` : "Downtown Dry - Your guide to alcohol-free bars, kava lounges, and NA venues"} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    <meta name="twitter:site" content="@downtowndry" />
    <meta name="twitter:creator" content="@downtowndry" />

    <!-- Article-specific Open Graph tags (for blog posts) -->
    {article && (
      <>
        {article.publishedTime && <meta property="article:published_time" content={article.publishedTime} />}
        {article.modifiedTime && <meta property="article:modified_time" content={article.modifiedTime} />}
        {article.author && <meta property="article:author" content={article.author} />}
        {article.section && <meta property="article:section" content={article.section} />}
        {article.tags && article.tags.map(tag => <meta property="article:tag" content={tag} />)}
      </>
    )}

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Fonts - optimized for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://use.typekit.net" crossorigin>

    <!-- Preload critical font for faster LCP -->
    <link rel="preload" href="https://fonts.gstatic.com/s/inter/v18/UcC73FwrK3iLTeHuS_nVMrMxCp50SjIa1ZL7.woff2" as="font" type="font/woff2" crossorigin>

    <!-- Google Fonts - already has display=swap -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Figtree:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- TypeKit - loaded asynchronously to prevent render-blocking -->
    <link rel="stylesheet" href="https://use.typekit.net/tif0guk.css" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="https://use.typekit.net/tif0guk.css"></noscript>
    
    <!-- Fonts are loaded via link tags, global styles are imported in the frontmatter -->
  </head>
  <body class="bg-white text-gray-900 font-sans antialiased">
    <!-- Skip to main content link for keyboard/screen reader users -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-primary-700 focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:outline-none focus:ring-2 focus:ring-white"
    >
      Skip to main content
    </a>
    
    <!-- Header is automatically included for all pages -->
    <Header />

    <!-- Main content area - skip link target -->
    <main id="main-content">
      <slot />
    </main>

    <!-- Footer is automatically included for all pages -->
    <Footer />
    
    <!-- Vercel Analytics -->
    <Analytics />
  </body>
</html>
