---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Shop - Downtown Dry Affiliate Store" description="Discover the best kava, CBD products, mocktail ingredients, and alcohol-free beverages. Curated products for your mindful lifestyle.">
  <Header />
  
  <!-- Hero Section -->
  <section class="py-24 bg-gradient-to-br from-primary-700 via-secondary-500 to-accent-500 text-white relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/10 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-white/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <div class="relative max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-8 leading-tight tracking-tight">SHOP MINDFULLY</h1>
      <p class="text-xl md:text-2xl text-neutral-100 leading-relaxed max-w-4xl mx-auto">
        Discover curated products for your alcohol-free lifestyle. From premium kava to CBD beverages and mocktail ingredients.
      </p>
    </div>
  </section>
  
  <!-- Featured Categories -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-neutral-900 mb-6 tracking-tight">SHOP BY CATEGORY</h2>
        <p class="text-xl text-neutral-700 max-w-3xl mx-auto leading-relaxed">
          Everything you need to create amazing alcohol-free experiences at home
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Kava Products -->
        <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="relative overflow-hidden">
            <img src="https://images.pexels.com/photos/6896379/pexels-photo-6896379.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Premium Kava Products" class="w-full h-56 object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-semibold mb-4">PREMIUM KAVA</h3>
            <p class="text-neutral-700 mb-6 leading-relaxed">High-quality kava root and instant kava mixes from trusted Pacific Island sources for authentic relaxation experiences.</p>
            <a href="#kava" class="inline-flex items-center text-primary-700 font-semibold hover:text-primary-800 transition-colors">
              SHOP KAVA PRODUCTS
              <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- CBD Products -->
        <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="relative overflow-hidden">
            <img src="https://images.pexels.com/photos/7267637/pexels-photo-7267637.jpeg?auto=compress&cs=tinysrgb&w=800" alt="CBD Wellness Products" class="w-full h-56 object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-semibold mb-4">CBD BEVERAGES</h3>
            <p class="text-neutral-700 mb-6 leading-relaxed">Relaxing CBD-infused drinks, oils, and wellness products for stress relief and mindful consumption.</p>
            <a href="#cbd" class="inline-flex items-center text-primary-700 font-semibold hover:text-primary-800 transition-colors">
              SHOP CBD PRODUCTS
              <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Mocktail Ingredients -->
        <div class="group bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="relative overflow-hidden">
            <img src="https://images.pexels.com/photos/1304543/pexels-photo-1304543.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Mocktail Ingredients and Mixers" class="w-full h-56 object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-8">
            <h3 class="text-2xl font-semibold mb-4">MOCKTAIL MIXERS</h3>
            <p class="text-neutral-700 mb-6 leading-relaxed">Professional-grade syrups, bitters, and ingredients for crafting perfect alcohol-free cocktails at home.</p>
            <a href="#mocktails" class="inline-flex items-center text-primary-700 font-semibold hover:text-primary-800 transition-colors">
              SHOP MIXERS
              <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Products -->
  <section class="py-20 bg-neutral-50" id="kava">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-neutral-900 mb-12 text-center tracking-tight">FEATURED KAVA PRODUCTS</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img src="https://images.pexels.com/photos/6896378/pexels-photo-6896378.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Premium Kava Root from Vanuatu" class="w-full h-56 object-cover">
          <div class="p-8">
            <h3 class="text-xl font-semibold mb-3">Noble Kava Root - Vanuatu</h3>
            <p class="text-neutral-700 mb-4 leading-relaxed">Premium ground kava root from Vanuatu. Perfect for traditional preparation and authentic Pacific Island experience.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-neutral-900">$29.99</span>
              <button class="bg-primary-700 text-white px-6 py-3 rounded-lg hover:bg-primary-800 transition-colors font-semibold">
                VIEW PRODUCT
              </button>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img src="https://images.pexels.com/photos/6896380/pexels-photo-6896380.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Instant Kava Mix for Easy Preparation" class="w-full h-56 object-cover">
          <div class="p-8">
            <h3 class="text-xl font-semibold mb-3">Instant Kava Mix</h3>
            <p class="text-neutral-700 mb-4 leading-relaxed">Convenient instant kava powder. Just add water for quick preparation without traditional straining methods.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-neutral-900">$24.99</span>
              <button class="bg-primary-700 text-white px-6 py-3 rounded-lg hover:bg-primary-800 transition-colors font-semibold">
                VIEW PRODUCT
              </button>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img src="https://images.pexels.com/photos/6896381/pexels-photo-6896381.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Traditional Kava Strainer Bag" class="w-full h-56 object-cover">
          <div class="p-8">
            <h3 class="text-xl font-semibold mb-3">Traditional Strainer Bag</h3>
            <p class="text-neutral-700 mb-4 leading-relaxed">Authentic coconut fiber strainer bag for traditional kava preparation. Essential for proper kava brewing.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-neutral-900">$12.99</span>
              <button class="bg-primary-700 text-white px-6 py-3 rounded-lg hover:bg-primary-800 transition-colors font-semibold">
                VIEW PRODUCT
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CBD Products Section -->
  <section class="py-20" id="cbd">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-4xl font-bold text-neutral-900 mb-12 text-center tracking-tight">CBD WELLNESS PRODUCTS</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img src="https://images.pexels.com/photos/7267640/pexels-photo-7267640.jpeg?auto=compress&cs=tinysrgb&w=800" alt="CBD Sparkling Water" class="w-full h-56 object-cover">
          <div class="p-8">
            <h3 class="text-xl font-semibold mb-3">CBD Sparkling Water</h3>
            <p class="text-neutral-700 mb-4 leading-relaxed">Refreshing sparkling water infused with 10mg premium CBD. Perfect for social occasions. 12-pack.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-neutral-900">$39.99</span>
              <button class="bg-primary-700 text-white px-6 py-3 rounded-lg hover:bg-primary-800 transition-colors font-semibold">
                VIEW PRODUCT
              </button>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img src="https://images.pexels.com/photos/7267639/pexels-photo-7267639.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Premium CBD Tincture" class="w-full h-56 object-cover">
          <div class="p-8">
            <h3 class="text-xl font-semibold mb-3">Premium CBD Tincture</h3>
            <p class="text-neutral-700 mb-4 leading-relaxed">Full spectrum CBD oil tincture. 1000mg in organic MCT oil base for maximum bioavailability.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-neutral-900">$54.99</span>
              <button class="bg-primary-700 text-white px-6 py-3 rounded-lg hover:bg-primary-800 transition-colors font-semibold">
                VIEW PRODUCT
              </button>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img src="https://images.pexels.com/photos/7267638/pexels-photo-7267638.jpeg?auto=compress&cs=tinysrgb&w=800" alt="CBD Gummies for Relaxation" class="w-full h-56 object-cover">
          <div class="p-8">
            <h3 class="text-xl font-semibold mb-3">CBD Gummies</h3>
            <p class="text-neutral-700 mb-4 leading-relaxed">Delicious fruit-flavored gummies with 25mg CBD each. Perfect for on-the-go relaxation. 30-count bottle.</p>
            <div class="flex justify-between items-center">
              <span class="text-2xl font-bold text-neutral-900">$49.99</span>
              <button class="bg-primary-700 text-white px-6 py-3 rounded-lg hover:bg-primary-800 transition-colors font-semibold">
                VIEW PRODUCT
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Newsletter/Affiliate Disclosure -->
  <section class="py-20 bg-gradient-to-br from-neutral-900 via-primary-800 to-secondary-700 text-white relative overflow-hidden">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-white/5 rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-bold mb-6 tracking-tight">STAY UPDATED ON NEW PRODUCTS</h2>
      <p class="text-xl text-neutral-300 mb-10 max-w-2xl mx-auto leading-relaxed">
        Be the first to know about new mindful lifestyle products and exclusive deals.
      </p>
      <form class="max-w-md mx-auto mb-10">
        <div class="flex gap-4">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="flex-1 px-6 py-4 rounded-xl text-neutral-900 bg-white focus:outline-none focus:ring-4 focus:ring-white/30 transition-all"
          >
          <button 
            type="submit" 
            class="bg-accent-500 text-white px-8 py-4 rounded-xl font-semibold hover:bg-accent-600 transition-all duration-300 transform hover:scale-105 shadow-lg"
          >
            SUBSCRIBE
          </button>
        </div>
      </form>
      <p class="text-sm text-neutral-400 leading-relaxed">
        <strong>Affiliate Disclosure:</strong> Downtown Dry may earn a commission from purchases made through our affiliate links. This helps support our mission to promote alcohol-free nightlife at no extra cost to you.
      </p>
    </div>
  </section>
  
  <Footer />
</Layout>