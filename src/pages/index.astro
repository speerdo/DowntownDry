---
import Layout from '../layouts/Layout.astro';
---

<!-- Structured Data for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Downtown Dry",
  "description": "Comprehensive directory of alcohol-free venues including kava bars, mocktail lounges, and THC beverage venues across US cities",
  "url": "https://downtowndry.com",
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://downtowndry.com/states?q={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "mainEntity": {
    "@type": "Organization",
    "name": "Downtown Dry",
    "description": "Directory of 500+ alcohol-free venues across 50+ US cities",
    "sameAs": [
      "https://instagram.com/downtowndry",
      "https://twitter.com/downtowndry"
    ]
  }
}
</script>

<Layout title="Downtown Dry - Find Alcohol-Free Bars, Kava Lounges & THC Venues Near You" description="Discover 500+ venues serving non-alcoholic beer, mocktails, kava, and legal delta THC drinks in 50+ US cities. Safe spaces for mindful socializing, recovery support, and inclusive nightlife experiences. Complete guide to alcohol-free bars, kava lounges, and hemp beverage venues nationwide.">
  <!-- Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Split Background Design -->
    <div class="absolute inset-0 flex">
      <!-- Left side - Brand colors -->
      <div class="w-1/2 bg-gradient-to-br from-primary-700 via-primary-600 to-secondary-500"></div>
      <!-- Right side - City night image -->
      <div class="w-1/2 relative">
        <img 
          src="https://images.unsplash.com/photo-1519501025264-65ba15a82390?ixlib=rb-4.0.3&auto=format&fit=crop&w=1200&q=80" 
          alt="Downtown city at night" 
          class="w-full h-full object-cover"
        >
        <div class="absolute inset-0 bg-gradient-to-l from-transparent via-primary-700/30 to-primary-700/80"></div>
      </div>
    </div>
    
    <!-- Geometric Background Elements -->
    <div class="absolute inset-0">
      <div class="absolute top-20 left-20 w-32 h-32 bg-secondary-500/20 rounded-full"></div>
      <div class="absolute top-40 right-32 w-24 h-24 bg-accent-500/30 rounded-full"></div>
      <div class="absolute bottom-32 left-1/3 w-40 h-40 bg-neutral-50/10 rounded-full"></div>
      <div class="absolute bottom-20 right-20 w-28 h-28 bg-secondary-500/15 rounded-full"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white z-10">
      <!-- Main Logo/Brand -->
      <div class="mb-12">
        <div class="inline-flex items-center justify-center w-32 h-32 bg-gradient-to-br from-secondary-500 to-accent-500 rounded-full mb-8 shadow-2xl">
          <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          </svg>
        </div>
        <h1 class="text-6xl md:text-8xl font-semibold mb-6 leading-tight tracking-tight font-heading">
          DOWNTOWN<br />
          <span style="color: #D9AA55;">DRY</span>
        </h1>
      </div>
      
      <div class="max-w-4xl mx-auto mb-16">
        <p class="text-2xl md:text-3xl font-light mb-8 text-neutral-100 leading-relaxed">
          Zero Proof. Full Flavor.
        </p>
        <p class="text-lg md:text-xl text-neutral-200 leading-relaxed">
          Discover venues serving NA beers, mocktails, delta THC drinks, and kava across US cities. 
          Your guide to alcohol-free nightlife where great drinks meet genuine connection.
        </p>
      </div>
      
      <div class="flex flex-col sm:flex-row items-center justify-center">
        <div class="flex flex-col sm:flex-row gap-6 sm:gap-16 items-center">
          <a href="/states" class="group bg-secondary-500 text-white px-12 py-5 rounded-2xl font-bold text-lg hover:bg-secondary-600 transition-all duration-300 transform hover:scale-105 shadow-2xl w-72 text-center">
            EXPLORE CITIES
            <svg class="inline-block ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
          </a>
          <a href="/shop" class="group relative bg-white/10 backdrop-blur-md border-2 border-white/50 text-white px-12 py-5 rounded-2xl font-bold text-lg hover:bg-white/20 hover:border-white/70 hover:shadow-2xl transition-all duration-300 transform hover:scale-105 w-72 text-center">
            <span class="relative z-10">SHOP DRINKS</span>
            <svg class="inline-block ml-3 w-5 h-5 group-hover:translate-x-1 transition-transform relative z-10" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            <!-- Subtle gradient overlay for depth -->
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-white/5 to-white/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Stats Section -->
  <section class="py-20 relative overflow-hidden" style="background: linear-gradient(135deg, #1D200F 0%, #505A28 50%, #1D200F 100%);">
    <!-- Animated background elements -->
    <div class="absolute inset-0">
      <div class="absolute top-10 left-10 w-20 h-20 rounded-full animate-pulse" style="background-color: rgba(217, 170, 85, 0.1);"></div>
      <div class="absolute top-40 right-20 w-32 h-32 rounded-full animate-pulse delay-1000" style="background-color: rgba(217, 133, 85, 0.1);"></div>
      <div class="absolute bottom-20 left-1/4 w-24 h-24 rounded-full animate-pulse delay-500" style="background-color: rgba(217, 170, 85, 0.15);"></div>
      <div class="absolute bottom-40 right-1/3 w-16 h-16 rounded-full animate-pulse delay-1500" style="background-color: rgba(80, 90, 40, 0.2);"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6 font-heading">
          By The Numbers
        </h2>
        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          Real data from the largest directory of alcohol-free venues in America
        </p>
      </div>

      <!-- Main Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
        <!-- Total Venues -->
        <div class="group relative">
          <div class="backdrop-blur-md border p-8 rounded-3xl text-center hover:shadow-2xl transition-all duration-300 transform hover:scale-105" style="background: linear-gradient(135deg, rgba(242, 234, 223, 0.2) 0%, rgba(242, 234, 223, 0.05) 100%); border-color: rgba(217, 170, 85, 0.3);">
            <div class="text-6xl font-bold mb-4" style="color: #D9AA55;">
              1,879
            </div>
            <h3 class="text-xl font-bold mb-2 font-heading" style="color: #F2EADF;">VENUES</h3>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">Curated nationwide</p>
          </div>
          <div class="absolute inset-0 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10" style="background: linear-gradient(135deg, rgba(217, 170, 85, 0.2) 0%, rgba(217, 133, 85, 0.2) 100%);"></div>
        </div>

        <!-- Cities -->
        <div class="group relative">
          <div class="backdrop-blur-md border p-8 rounded-3xl text-center hover:shadow-2xl transition-all duration-300 transform hover:scale-105" style="background: linear-gradient(135deg, rgba(242, 234, 223, 0.2) 0%, rgba(242, 234, 223, 0.05) 100%); border-color: rgba(217, 170, 85, 0.3);">
            <div class="text-6xl font-bold mb-4" style="color: #D98555;">
              264
            </div>
            <h3 class="text-xl font-bold mb-2 font-heading" style="color: #F2EADF;">CITIES</h3>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">Coast to coast</p>
          </div>
          <div class="absolute inset-0 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10" style="background: linear-gradient(135deg, rgba(217, 133, 85, 0.2) 0%, rgba(217, 170, 85, 0.2) 100%);"></div>
        </div>

        <!-- States -->
        <div class="group relative">
          <div class="backdrop-blur-md border p-8 rounded-3xl text-center hover:shadow-2xl transition-all duration-300 transform hover:scale-105" style="background: linear-gradient(135deg, rgba(242, 234, 223, 0.2) 0%, rgba(242, 234, 223, 0.05) 100%); border-color: rgba(217, 170, 85, 0.3);">
            <div class="text-6xl font-bold mb-4" style="color: #D9AA55;">
              50+DC
            </div>
            <h3 class="text-xl font-bold mb-2 font-heading" style="color: #F2EADF;">STATES</h3>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">Complete coverage</p>
          </div>
          <div class="absolute inset-0 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10" style="background: linear-gradient(135deg, rgba(217, 170, 85, 0.2) 0%, rgba(80, 90, 40, 0.2) 100%);"></div>
        </div>

        <!-- Alcohol-Free -->
        <div class="group relative">
          <div class="backdrop-blur-md border p-8 rounded-3xl text-center hover:shadow-2xl transition-all duration-300 transform hover:scale-105" style="background: linear-gradient(135deg, rgba(242, 234, 223, 0.2) 0%, rgba(242, 234, 223, 0.05) 100%); border-color: rgba(217, 170, 85, 0.3);">
            <div class="text-6xl font-bold mb-4" style="color: #D98555;">
              0%
            </div>
            <h3 class="text-xl font-bold mb-2 font-heading" style="color: #F2EADF;">ALCOHOL</h3>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">Pure experiences</p>
          </div>
          <div class="absolute inset-0 rounded-3xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10" style="background: linear-gradient(135deg, rgba(80, 90, 40, 0.2) 0%, rgba(217, 170, 85, 0.2) 100%);"></div>
        </div>
      </div>

      <!-- Venue Type Breakdown -->
      <div class="backdrop-blur-md border rounded-3xl p-8" style="background: linear-gradient(135deg, rgba(242, 234, 223, 0.15) 0%, rgba(242, 234, 223, 0.05) 100%); border-color: rgba(217, 170, 85, 0.3);">
        <h3 class="text-2xl font-bold text-center mb-8 font-heading" style="color: #F2EADF;">Venue Breakdown</h3>
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: #D9AA55;">991</div>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">Fully Alcohol-Free</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: #F2EADF;">159</div>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">Mocktail Venues</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: #D98555;">68</div>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">Kava Bars</p>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold mb-2" style="color: #F2EADF;">1+</div>
            <p class="text-sm" style="color: rgba(242, 234, 223, 0.8);">THC Venues</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Why This Matters Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-bold text-neutral-900 mb-8 tracking-tight font-heading">
          THE FUTURE OF<br />
          <span style="color: #505A28;">NIGHTLIFE</span>
        </h2>
        <p class="text-xl text-neutral-700 max-w-3xl mx-auto leading-relaxed">
          More people are choosing mindful experiences over mindless consumption. 
          We're here to guide you to venues with the best alcohol-free drinks in your city.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <div class="text-center">
          <div class="w-24 h-24 bg-primary-700 rounded-3xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-neutral-900 mb-4 font-heading">GROWING MOVEMENT</h3>
          <p class="text-neutral-700 leading-relaxed">
            Over 30% of adults are reducing alcohol consumption, creating demand for venues serving innovative alcohol-free alternatives that actually taste great.
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-24 h-24 bg-secondary-500 rounded-3xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-neutral-900 mb-4 font-heading">QUALITY DRINKS</h3>
          <p class="text-neutral-700 leading-relaxed">
            From craft NA beers to artisanal kava preparations, these venues focus on premium ingredients and expert preparation for exceptional taste experiences.
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-24 h-24 bg-accent-500 rounded-3xl flex items-center justify-center mx-auto mb-6">
            <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-neutral-900 mb-4 font-heading">INCLUSIVE VIBES</h3>
          <p class="text-neutral-700 leading-relaxed">
            Whether you're in recovery, pregnant, driving, or just choosing to drink mindfully, these venues welcome everyone without judgment or pressure.
          </p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Categories -->
  <section class="py-20 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-5xl md:text-6xl font-bold text-neutral-900 mb-8 tracking-tight font-heading">
          WHAT YOU'LL<br />
          <span style="color: #D98555;">DISCOVER</span>
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- NA Beer Venues -->
        <div class="group bg-white rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="relative overflow-hidden h-64">
            <img src="https://images.unsplash.com/photo-1608270586620-248524c67de9?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Non-alcoholic beer tap" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-gradient-to-t from-primary-700/90 to-primary-700/40 flex items-center justify-center">
              <div class="text-center text-white">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold font-heading">NA BEER VENUES</h3>
              </div>
            </div>
          </div>
          <div class="p-8">
            <p class="text-neutral-700 leading-relaxed mb-6">
              Bars and taprooms featuring the best non-alcoholic beers on tap and in bottles. From hoppy IPAs to rich stouts, all the flavor without the buzz.
            </p>
            <a href="/states" class="inline-flex items-center text-primary-700 font-bold hover:text-primary-800 transition-colors">
              FIND NA BEER SPOTS
              <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Mocktail Bars -->
        <div class="group bg-white rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="relative overflow-hidden h-64">
            <img src="https://images.unsplash.com/photo-1551024709-8f23befc6f87?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" alt="Mocktail Bar" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
            <div class="absolute inset-0 bg-gradient-to-t from-accent-500/90 to-accent-500/40 flex items-center justify-center">
              <div class="text-center text-white">
                <div class="w-16 h-16 bg-white/20 rounded-2xl flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold font-heading">MOCKTAIL LOUNGES</h3>
              </div>
            </div>
          </div>
          <div class="p-8">
            <p class="text-neutral-700 leading-relaxed mb-6">
              Sophisticated cocktail lounges serving creative alcohol-free beverages. All the craftsmanship and ambiance of a premium cocktail bar, zero proof.
            </p>
            <a href="/states" class="inline-flex items-center text-primary-700 font-bold hover:text-primary-800 transition-colors">
              BROWSE MOCKTAIL BARS
              <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
