import Layout from '../layouts/Layout.astro';
import { createClient } from '@supabase/supabase-js';

const url = new URL(Astro.request.url);
const subscribed = url.searchParams.get('subscribed') === 'true';

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
const supabase = createClient(supabaseUrl, supabaseKey);

// Get live stats from database for soft launch states
const { data: activeStates } = await supabase
  .from('states')
  .select('state_name')
  .eq('is_active', true);

const activeStateNames = activeStates?.map(s => s.state_name) || [];

// Fetch venue statistics
let allVenues: any[] = [];
let from = 0;
const batchSize = 1000;

while (true) {
  const { data: batch } = await supabase
    .from('venues')
    .select('city, state, serves_mocktails, serves_kava, serves_thc, is_alcohol_free, is_sober_friendly')
    .eq('data_complete', true)  // Only active venues
    .in('state', activeStateNames)
    .range(from, from + batchSize - 1);
  
  if (!batch || batch.length === 0) break;
  allVenues.push(...batch);
  if (batch.length < batchSize) break;
  from += batchSize;
}

// Calculate live statistics
const totalVenues = allVenues.length;
const totalCities = new Set(allVenues.map(v => `${v.city}, ${v.state}`)).size;
const alcoholFreeVenues = allVenues.filter(v => v.is_alcohol_free).length;
const soberFriendlyVenues = allVenues.filter(v => v.is_sober_friendly).length;
const kavaVenues = allVenues.filter(v => v.serves_kava).length;
const thcVenues = allVenues.filter(v => v.serves_thc).length;
