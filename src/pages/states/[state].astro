import Layout from '../../layouts/Layout.astro';
import { createClient } from '@supabase/supabase-js';

// Default fallback values (used when database doesn't have data)
const DEFAULT_STATE_IMAGE = 'https://images.unsplash.com/photo-1449824913935-59a10b8d2000?auto=format&fit=crop&w=1600&h=600&q=80';
const DEFAULT_STATE_DESC = {
  intro: `Discover the growing alcohol-free scene in this state. From craft mocktail bars to kava lounges and THC venues, find the perfect spot for mindful drinking and sober socializing.`,
  metaDesc: 'Find alcohol-free bars, kava lounges & mocktail venues in this state. Your guide to sober nightlife.'
};

export async function getStaticPaths() {
  const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
  const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
  const supabase = createClient(supabaseUrl, supabaseKey);

  // Fetch active states from the states table (soft launch control via is_active flag)
  const { data: activeStates, error: statesError } = await supabase
    .from('states')
    .select('*')
    .eq('is_active', true);

  if (statesError) {
    console.error('Error fetching states:', statesError);
    return [];
  }

  // Get all unique states from venues table that are also in our active states list
  const activeStateNames = activeStates?.map(s => s.state_name) || [];
  
  let allVenueStates: string[] = [];
  let from = 0;
  const batchSize = 1000;
  
  while (true) {
    const { data: batch } = await supabase
      .from('venues')
      .select('state')
      .eq('data_complete', true)  // Only show active venues
      .not('state', 'is', null)
      .in('state', activeStateNames)
      .range(from, from + batchSize - 1);
    
    if (!batch || batch.length === 0) break;
    allVenueStates.push(...batch.map(b => b.state));
    
    if (batch.length < batchSize) break;
    from += batchSize;
  }

  const uniqueStatesWithVenues = [...new Set(allVenueStates)];

  return uniqueStatesWithVenues.map(stateName => {
    const stateData = activeStates?.find(s => s.state_name === stateName);
    return {
      params: { 
        state: stateName.toLowerCase().replace(/\s+/g, '-') 
      },
      props: { 
        stateName: stateName,
        stateData: stateData || null
      }
    };
  });
}

const { state } = Astro.params;
const { stateName, stateData } = Astro.props;

const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
const supabase = createClient(supabaseUrl, supabaseKey);

// Get state image and descriptions from database, with fallbacks
const stateImage = stateData?.image_url || DEFAULT_STATE_IMAGE;
const stateDesc = {
  intro: stateData?.description || DEFAULT_STATE_DESC.intro,
  metaDesc: stateData?.meta_description || DEFAULT_STATE_DESC.metaDesc
};

// Get all venues in this state - handle pagination to avoid limits
let allStateVenues: any[] = [];
let page = 0;
const pageSize = 1000;

while (true) {
  const { data: batch, error: batchError } = await supabase
    .from('venues')
    .select('*')
    .eq('data_complete', true)  // Only show active venues
    .eq('state', stateName)
    .range(page * pageSize, (page + 1) * pageSize - 1);

  if (batchError) {
    console.error('Error fetching state venues:', batchError);
    break;
  }

  if (!batch || batch.length === 0) {
    break; // No more data
  }

  allStateVenues = [...allStateVenues, ...batch];
  
  if (batch.length < pageSize) {
    break; // Last page
  }
  
  page++;
}

const stateVenues = allStateVenues;
const venuesError = null;

if (venuesError) {
  console.error('Error fetching venues:', venuesError);
}

// Group venues by city and get city info from cities table
const cityNames = [...new Set(stateVenues?.map(v => v.city).filter(Boolean) || [])];
const { data: cityData } = await supabase
  .from('cities')
  .select('*')
  .eq('state', stateName)
  .in('city_name', cityNames);

// Combine venue and city data, including image_url from cities table
const citiesWithVenues = cityNames.map(cityName => {
  const cityInfo = cityData?.find(c => c.city_name === cityName);
  const cityVenues = stateVenues?.filter(v => v.city === cityName) || [];
  
  return {
    city_name: cityName,
    full_name: cityInfo?.full_name || `${cityName}, ${stateName}`,
    population: cityInfo?.population || null,
    image_url: cityInfo?.image_url || null, // City image from database
    venues: cityVenues
  };
}).filter(city => city.venues.length > 0)
  .sort((a, b) => a.city_name.localeCompare(b.city_name));

// Helper function to get city image (from database or null)
function getFeaturedCityImage(cityName: string): string | null {
  const city = citiesWithVenues.find(c => c.city_name === cityName);
  return city?.image_url || null;
}
const totalVenues = citiesWithVenues.reduce((sum, city) => sum + city.venues.length, 0);

// Calculate state-wide stats
const totalMocktailVenues = citiesWithVenues.reduce((sum, city) => 
  sum + city.venues.filter(v => v.serves_mocktails).length, 0);
const totalKavaVenues = citiesWithVenues.reduce((sum, city) => 
  sum + city.venues.filter(v => v.serves_kava).length, 0);
const totalThcVenues = citiesWithVenues.reduce((sum, city) => 
  sum + city.venues.filter(v => v.serves_thc).length, 0);
const avgRating = citiesWithVenues.reduce((sum, city) => {
  const cityRatings = city.venues.filter(v => v.rating).map(v => v.rating);
  return sum + (cityRatings.length > 0 ? cityRatings.reduce((a, b) => a + b, 0) / cityRatings.length : 0);
}, 0) / citiesWithVenues.filter(city => city.venues.some(v => v.rating)).length;

function getCityImage(cityName: string, venues: any[]) {
  // Generate city-specific images based on venue characteristics
  const hasKava = venues.some(v => v.serves_kava);
  const hasMocktails = venues.some(v => v.serves_mocktails);
  const hasThc = venues.some(v => v.serves_thc);
  
  if (hasKava) return 'https://images.unsplash.com/photo-1544787219-7f47ccb76574?auto=format&fit=crop&w=400&h=200&q=80';
  if (hasThc) return 'https://images.unsplash.com/photo-1514933651103-005eec06c04b?auto=format&fit=crop&w=400&h=200&q=80';
  if (hasMocktails) return 'https://images.unsplash.com/photo-1551024506-0bccd828d307?auto=format&fit=crop&w=400&h=200&q=80';
  
  // Default city nightlife image
  return 'https://images.unsplash.com/photo-1470337458703-46ad1756a187?auto=format&fit=crop&w=400&h=200&q=80';
}

function getCitySlug(cityName: string) {
  return cityName.toLowerCase().replace(/\s+/g, '-');
}

function getStateSlug(stateName: string) {
  return stateName.toLowerCase().replace(/\s+/g, '-');
}

// Normalize image URLs to HTTPS (fixes mixed content warnings from Wikipedia images)
function normalizeImageUrl(url: string | null | undefined): string | null {
  if (!url) return null;
  // Convert http:// to https:// for better security
  if (url.startsWith('http://')) {
    return url.replace('http://', 'https://');
  }
  return url;
}

// Select featured cities: prioritize cities with images, then by venue count
// Try to get 3 cities, but lower threshold if needed
const sortedCities = [...citiesWithVenues].sort((a, b) => {
  // First priority: cities with images
  const aHasImage = a.image_url ? 1 : 0;
  const bHasImage = b.image_url ? 1 : 0;
  if (aHasImage !== bHasImage) return bHasImage - aHasImage;
  // Second priority: number of venues
  return b.venues.length - a.venues.length;
});

// Try to get 3 cities, starting with cities that have 3+ venues
let featuredCities = sortedCities.filter(city => city.venues.length >= 3).slice(0, 3);

// If we don't have 3 cities with 3+ venues, fill with cities that have 2+ venues
if (featuredCities.length < 3) {
  const additionalCities = sortedCities
    .filter(city => city.venues.length >= 2 && !featuredCities.some(fc => fc.city_name === city.city_name))
    .slice(0, 3 - featuredCities.length);
  featuredCities = [...featuredCities, ...additionalCities];
}

// If we still don't have 3, fill with any remaining cities (up to 3 total)
if (featuredCities.length < 3) {
  const remainingCities = sortedCities
    .filter(city => !featuredCities.some(fc => fc.city_name === city.city_name))
    .slice(0, 3 - featuredCities.length);
  featuredCities = [...featuredCities, ...remainingCities];
}

